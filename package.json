{
  "name": "epubjs",
  "version": "0.3.93",
  "description": "Parse and Render Epubs",
  "main": "src/index.ts",
  "type": "module",
  "repository": "https://github.com/jauhen/epub.ts",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "start": "node server.js",
    "test": "web-test-runner test/**/*.ts",
    "test:watch": "web-test-runner test/**/*.ts --watch",
    "test:coverage": "web-test-runner test/**/*.ts --coverage",
    "test:update": "web-test-runner test/**/*.ts --update-visual-baseline",
    "docs": "documentation build src/epub.ts -f html -o documentation/html/",
    "docs:html": "documentation build src/epub.ts -f html -o documentation/html/",
    "docs:md": "documentation build src/epub.ts -f md -o documentation/md/API.md",
    "lint": "eslint -c .eslintrc.js src/**/*; exit 0",
    "build": "metro build ./src/index.ts --config=./metro.config.js --reset-cache --minify=false --source-map --out=./dist/epub.js --target=browser",
    "minify": "metro build ./src/index.ts --config=./metro.config.js --reset-cache --minify=true --out=./dist/epub.min.js --target=browser"
  },
  "author": "fchasen@gmail.com",
  "license": "BSD-2-Clause",
  "devDependencies": {
    "@babel/cli": "^7.22.0",
    "@babel/core": "^7.28.4",
    "@babel/plugin-proposal-export-default-from": "^7.18.0",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-typescript": "^7.27.1",
    "@babel/runtime": "^7.22.0",
    "@eslint/js": "^9.36.0",
    "@esm-bundle/chai": "^4.3.4-fix.0",
    "@rollup/plugin-commonjs": "^26.0.3",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/event-emitter": "^0.3.5",
    "@types/express": "^5.0.3",
    "@types/finalhandler": "^1.2.4",
    "@types/jszip": "^3.4.0",
    "@types/lodash": "^4.17.20",
    "@types/mocha": "^10.0.10",
    "@types/serve-static": "^1.15.8",
    "@web/dev-server-esbuild": "^1.0.4",
    "@web/dev-server-import-maps": "^0.2.1",
    "@web/dev-server-rollup": "^0.6.4",
    "@web/test-runner": "^0.20.2",
    "@web/test-runner-commands": "^0.9.0",
    "@web/test-runner-visual-regression": "^0.10.0",
    "core-js": "^3.45.1",
    "documentation": "^14.0.3",
    "eslint": "^9.36.0",
    "express": "^4.18.0",
    "finalhandler": "^2.1.0",
    "metro": "^0.80.0",
    "metro-config": "^0.80.0",
    "metro-core": "^0.80.0",
    "raw-loader": "^4.0.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.1",
    "undici-types": "^7.16.0"
  },
  "dependencies": {
    "@xmldom/xmldom": "^0.8.11",
    "jszip": "^3.10.1",
    "localforage": "^1.10.0",
    "lodash": "^4.17.21",
    "marks-pane": "^1.0.9",
    "path-webpack": "0.0.3"
  }
}
