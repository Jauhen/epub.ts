{
  "name": "epubjs",
  "version": "0.3.93",
  "description": "Parse and Render Epubs",
  "main": "lib/index.js",
  "module": "src/index.js",
  "types": "types/index.d.ts",
  "repository": "https://github.com/futurepress/epub.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "karma start --single-run --browsers ChromeHeadlessNoSandbox",
    "docs": "documentation build src/epub.js -f html -o documentation/html/",
    "docs:html": "documentation build src/epub.js -f html -o documentation/html/",
    "docs:md": "documentation build src/epub.js -f md -o documentation/md/API.md",
    "lint": "eslint -c .eslintrc.js src; exit 0",
    "start": "node server.js",
    "build": "NODE_ENV=production node build.js",
    "minify": "NODE_ENV=production MINIMIZE=true node build.js",
    "legacy": "NODE_ENV=production LEGACY=true node build.js",
    "productionLegacy": "NODE_ENV=production MINIMIZE=true LEGACY=true node build.js",
    "compile": "babel -d lib/ src/",
    "watch": "babel --watch -d lib/ src/",
    "prepare": "npm run compile && npm run build && npm run minify && npm run legacy && npm run productionLegacy"
  },
  "author": "fchasen@gmail.com",
  "license": "BSD-2-Clause",
  "devDependencies": {
    "@babel/cli": "^7.22.0",
    "@babel/core": "^7.22.0",
    "@babel/plugin-proposal-export-default-from": "^7.18.0",
    "@babel/preset-env": "^7.22.0",
    "@babel/preset-typescript": "^7.27.1",
    "@babel/runtime": "^7.22.0",
    "@types/event-emitter": "^0.3.5",
    "@types/jszip": "^3.4.0",
    "@types/lodash": "^4.17.20",
    "@types/node": "^24.5.2",
    "documentation": "^14.0.0",
    "eslint": "^8.45.0",
    "express": "^4.18.0",
    "jsdoc": "^4.0.0",
    "karma": "^6.4.0",
    "karma-chrome-launcher": "^3.2.0",
    "karma-mocha": "^2.0.1",
    "karma-mocha-reporter": "^2.2.5",
    "karma-phantomjs-launcher": "^1.0.4",
    "karma-sourcemap-loader": "^0.4.0",
    "metro": "^0.80.0",
    "metro-config": "^0.80.0",
    "metro-core": "^0.80.0",
    "mocha": "^8.4.0",
    "raw-loader": "^4.0.2",
    "tsd-jsdoc": "^2.5.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@types/localforage": "0.0.34",
    "@xmldom/xmldom": "^0.7.5",
    "caniuse-lite": "^1.0.30001743",
    "core-js": "^3.18.3",
    "event-emitter": "^0.3.5",
    "jszip": "^3.7.1",
    "localforage": "^1.10.0",
    "lodash": "^4.17.21",
    "marks-pane": "^1.0.9",
    "path-webpack": "0.0.3"
  }
}
